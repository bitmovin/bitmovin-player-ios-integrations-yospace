source 'https://www.github.com/socialvibe/cocoapod-specs'

def shared_pods
    pod 'BitmovinYospaceModule', :path => '../'
    pod 'BitmovinPlayer', git: 'https://github.com/bitmovin/bitmovin-player-ios-sdk-cocoapod.git', tag: '2.35.0-rc.1'
end

target 'BitmovinYospaceModule_Example' do
    use_frameworks!
    platform :ios, '9.0'
    shared_pods
    pod 'TruexAdRenderer-iOS', '3.2.1'
end

target 'BitmovinYospaceModule_Example_tvOS' do
    use_frameworks!
    platform :tvos, '9.2'
    shared_pods    
end
